{
  "root": true,
  "extends": [
    "plugin:tailwindcss/recommended"
  ],
  "overrides": [{
    "files": [
      "*.vue"
    ],
    "parser": "vue-eslint-parser"
  }],
  "settings": {
    "tailwindcss": {
      "config": "tailwind.config.js"
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
